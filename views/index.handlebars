<div class="container">

<div class="row">
  <div class="col-md-12">
	  <h1 class="text-center">Eat-Da-Burger!</h1>
  </div>
  <br>

	<div class="col-md-12">
		<p class="text-center sub-t">- Choose the One You Wish to Eat -</p>
	</div>
</div>
  <br>

<div class="row">
  <div class="col-md-12">
    <img src="/img/bestburger.jpg" alt="burger" class="img-responsive center-block">
  </div>
</div>

<div class="row">
	<div class="col-md-2 col-sm-1 col-xs-4"></div>
	<div class="col-md-4 col-sm-5 col-xs-8">
		<h3>Uneaten Burgers</h3>
			<ul>
				{{#each burgers}}
					{{#unless this.devoured}}
					<li>
						<h5>{{this.id}}. {{this.burger_name}}
							<form action='burgers/updateOne/{{this.id}}?_method=PUT' method='POST'>
								<input type='hidden' name='devoured' value='true'>
								<button type='submit' class="btn btn-default">DEVOUR!</button>
							</form>
						</h5>
					</li>
					{{/unless}}
				{{/each}}
		  </ul>
	</div>

	<div class="col-md-1 col-sm-1 col-xs-4"></div>
	<div class="col-md-3 col-sm-4 col-xs-8">
		<h3 class="text-muted">Eaten Burgers</h3>
		<ul>
			{{#each burgers}}
				{{#if this.devoured}}
				  <li>
						<h5 class="text-muted">{{this.id}}. {{this.burger_name}}</h5>
					</li>
				{{/if}}
			{{/each}}
		</ul>
	</div>
	<div class="col-md-2 col-sm-1 col-xs-0"></div>
</div>

<div class="row">
	<div class="col-md-12 text-center">
		<form class="create-update-form" action="burgers/insertOne" method="POST">
			<div class="form-group">
				<textarea type="text" name="name"></textarea><br>
				<button class="btn btn-default" type="submit">Submit</button>
				<h5 class="text-center">Add the burger you want to eat to the text field and click "Submit"</h5>
			</div>
		</form>
	</div>
</div>

</div>
